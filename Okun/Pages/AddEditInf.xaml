<Page x:Class="Okun.Pages.AddEditInf"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Okun.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditInf">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Название" Margin="5"/>
            <TextBox Text="{Binding Name}" Margin="5"/>
            <TextBlock Text="Тип" Margin="5"/>
            <TextBox Text="{Binding Type}" Margin="5"/>
            <TextBlock Text="Категория" Margin="5"/>
            <TextBox Text="{Binding Category}" Margin="5"/>
            <TextBlock Text="Цена" Margin="5"/>
            <TextBox Text="{Binding Prise}" Margin="5"/>
            <Button x:Name="SaveBtn" Content="Сохранить" Margin="5" Width="150" Height="30" Click="SaveBtn_Click"/>
            <Button x:Name="BackBtn" Content="Отменить" Margin="5" Width="150" Height="30" Click="BackBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
